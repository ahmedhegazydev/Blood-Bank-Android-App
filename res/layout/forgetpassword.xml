<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llForget1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/solid1"
    android:gravity="center_horizontal|center_horizontal"
    android:orientation="vertical"
    android:padding="5dp" >

    <ScrollView
        android:id="@+id/llForget2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none" >

        <LinearLayout
            android:id="@+id/llForget3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/llForget4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal"
                android:weightSum="100" >

                <EditText
                    android:id="@+id/etUnForget"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="80"
                    android:hint="@string/page5Str1"
                    android:inputType="text"
                    android:textStyle="bold" />

                <CheckBox
                    android:id="@+id/cbForget"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="20"
                    android:enabled="false" />
            </LinearLayout>

            <EditText
                android:id="@+id/pass1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:hint="@string/page5Str2"
                android:inputType="text"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/llForget5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal"
                android:weightSum="100" >

                <EditText
                    android:id="@+id/pass2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="80"
                    android:hint="@string/page5Str3"
                    android:inputType="text"
                    android:textStyle="bold" />

                <CheckBox
                    android:id="@+id/cbConfPassForget"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="20"
                    android:enabled="false" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" 
                android:id="@+id/llForget6"
                android:layout_margin="5dp"
                android:padding="10dp"
                android:gravity="center_horizontal"
                >

                <Button
                    android:id="@+id/editPass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="@string/page5Str4"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/cancel" 
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>